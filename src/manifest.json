{
    "manifest_version": 3,
    "name": "GramHarvest - Instagram Data Collection. Posts, Reels and more",
    "version": "1.0.0",
    "description": "Scrape all post and reel links from Instagram profiles with a modern React interface.",
    "permissions": [
        "cookies",
        "storage",
        "activeTab",
        "scripting",
        "downloads"
    ],
    "host_permissions": [
        "*://*.instagram.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
